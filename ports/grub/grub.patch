+  FILE="$1"
+  DEVICE=$(grub-probe -t device -- "$FILE")
+  while [ "$FILE" != "/" ]; do
+    PARENT="$(dirname -- "$FILE")"
+    if [ x"$(grub-probe -t device -- "$PARENT")" != x"$DEVICE" ]; then
+      echo "$FILE"
+      exit 0
+    fi
+    FILE="$PARENT"
+  done
+  echo "$FILE"
+  exit 0
