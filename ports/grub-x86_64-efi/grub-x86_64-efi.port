NAME=grub-x86_64-efi
EDITION=2
BUILD_LIBRARIES='libiconv? libintl? libfreetype? liblzma?'
SOURCE_PORT=grub
LICENSE=GPL-3.0-or-later
BUILD_SYSTEM=configure
# TODO: Unfortunately 32-bit sortix gcc fails due to no 64-bit support.
CONFIGURE_ARGS='--disable-werror --program-prefix= --with-platform=efi --target=x86_64-sortix --without-libiconv-prefix --without-libintl-prefix'
CONFIGURE_VARS='NO_CFLAGS_STRIP=1'
MAKE_BUILD_TARGET=grub-core
MAKE_INSTALL_TARGET=install-grub-core
